<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
		integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
	<link href="stylesheets/style.css" rel="stylesheet" />
	<title>Homepage</title>
</head>

<body>
	<%- include("navbar.ejs") %>

		<div class="container mt-5">
			<!-- <div class="row justify-content-center align-items-center"> -->
				<form method="post" action="/search" class="row justify-content-center align-items-center">
					<div class="col-xs-12 col-md-3 mb-1">
						<div class="form-floating">
								<input class="form-control" list="from" name="from" id="examplefrom" placeholder="city" value=""/>
								<label for="examplefrom">From :</label>
								<datalist id="from">
									<% for(let city of allCities){%>
										<option value="<%= city %>"></option>
									<%} %> 
								</datalist>

						</div>
					</div>
					<div class="col-xs-12 col-md-3 mb-1">
						<div class="form-floating">
								<input class="form-control" list="to" name="to" id="exampleto" placeholder="city" value=""/>
								<label for="examplefrom">To :</label>
								<datalist id="to">
									<% for(let city of allCities){%>
										<option value="<%= city %>"></option>
									<%} %> 
								</datalist>
						</div>
					</div>
					<div class="col-xs-12 col-md-3 mb-1">
						<div class="form-floating">
								<input type="date" class="form-control" name="date" id="exampleDate" placeholder="date" value=""/>
								<label for="examplefrom">Date :</label>
						</div>
					</div>
					<div class="col-xs-12 col-md-1 mb-1 text-center">
						<div class="form-floating">
							<button type="submit" class="btn btn-danger">Search</button>
						</div>
					</div>
				</form>
			<!-- </div> -->
</div>
<div class="text-center mt-5">
	<img class="img-fluid w-25 h-25" src="/images/landmark.png">
</div>

	

		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
			integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
			crossorigin="anonymous"></script>
</body>

</html>