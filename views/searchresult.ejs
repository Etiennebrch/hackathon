<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous" />
  <link href="stylesheets/style.css" rel="stylesheet" />
</head>

<body>
  <%- include("navbar.ejs") %>
    
      
        <div class="container">
          <% if(results != ""){%>
          <div class="row justify-content-center mt-5">
            <div class="col col-md-7">
              <h2 class="text-white p-0">Ticket available on : <%= date.getDate() %>/<%= date.getMonth() + 1 %></h2>
            </div>
          </div>
          <% for (let result of results) { %>
          <div class="row justify-content-center mt-2">
            <div class="col col-md-7">
                <div class="card w-100 mb-3">
                    <div class="card-body d-flex justify-content-between align-items-center">
                          <div class="fw-bold fs-5">
                            <%= result.departure %>/<%= result.arrival%>
                          </div>
                          <div>
                            Train departure at : <%= result.departureTime %>
                          </div>
                          <div class="d-flex align-items-center">
                            <span class="fw-bold fs-5"><%= result.price %>â‚¬</span>
                            <a href="/add-to-cart?resultId=<%= result._id %>" class="btn btn-danger mx-2">Ok</a>
                          </div>
                    </div>
              </div>
            </div>
          </div>
        <% } %>
        </div>
      <% } else{%>
        <div class="container">
          <div class="row d-flex  justify-content-center align-items-center">
              <div class="mt-5 mb-3 w-50 p-0 text-center">
                  <h2 class="text-white p-0">Oops ! No train available</h2>
              </div>
              <div class="text-center">
                  <a href="/" type="button" class="btn btn-danger">Home</a>
              </div>
          </div>
        </div>
        <% } %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"></script>
</body>

</html>